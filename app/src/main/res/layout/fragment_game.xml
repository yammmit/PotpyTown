<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <!-- Main character container -->
    <ImageView
        android:id="@+id/ivMainCharacter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/game_background" />

    <!-- Walk button -->
    <ImageView
        android:id="@+id/btnWalk"
        android:layout_width="112dp"
        android:layout_height="117dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:contentDescription="btn_walk"
        android:src="@drawable/btn_walk" />

    <!-- Buttons container aligned to left -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <!-- Main button to go to home -->
        <ImageView
            android:id="@+id/btnMainHome"
            android:layout_width="47dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/btn_go_home"
            android:contentDescription="btn_go_home" />

        <!-- Mission button -->
        <ImageView
            android:id="@+id/btnMission"
            android:layout_width="37dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/btn_mission"
            android:contentDescription="btn_mission" />

        <!-- My room button -->
        <ImageView
            android:id="@+id/btnMyRoom"
            android:layout_width="80dp"
            android:layout_height="83dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_my_room"
            android:contentDescription="btn_my_room" />

    </LinearLayout>

</FrameLayout>
