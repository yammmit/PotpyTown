<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#FDF8EE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 장소 사진 -->
                <ImageView
                    android:id="@+id/img_place"
                    android:layout_width="match_parent"
                    android:layout_height="259dp"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0"
                    android:contentDescription="장소 사진" />

                <!-- 닫기 버튼 -->
                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/btn_close"
                    android:contentDescription="닫기 버튼"
                    android:layout_gravity="end|top" />
            </FrameLayout>

            <!-- 장소 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 장소 이름 -->
                <TextView
                    android:id="@+id/txt_place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하이멍그라미"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <!-- 장소 유형 -->
                <TextView
                    android:id="@+id/txt_place_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반려견놀이터"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp" />

                <!-- 버튼 섹션 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- 저장 버튼 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/favorite_button"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/circle_background"
                            android:contentDescription="저장 버튼"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="저장"
                            android:textSize="14sp"
                            android:textColor="#333333" />
                    </LinearLayout>

                    <!-- 지도 버튼 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="32dp">

                        <ImageView
                            android:id="@+id/btn_map"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/circle_background"
                            android:contentDescription="지도 버튼"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="지도"
                            android:textSize="14sp"
                            android:textColor="#333333" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 장소 세부 정보 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <!-- 주소 -->
                    <TextView
                        android:id="@+id/txt_place_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주소"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <!-- 전화번호 -->
                    <TextView
                        android:id="@+id/txt_place_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전화번호"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <!-- 홈페이지 주소 -->
                    <TextView
                        android:id="@+id/txt_place_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홈페이지 주소"
                        android:textSize="16sp"
                        android:textColor="#333333" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>