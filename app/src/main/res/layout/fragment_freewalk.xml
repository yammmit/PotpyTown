<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 지도 -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 어두운 배경 -->
    <View
        android:id="@+id/dark_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <!-- 카드뷰 레이아웃 -->
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="396dp"
        android:layout_gravity="bottom"
        android:background="@drawable/walk_bottombackground"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <!-- 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/walk_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:layout_marginLeft="195dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 거리 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거리"
                android:textColor="@color/text_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/walk_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 km"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:layout_marginLeft="200dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 빈 공간 -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- 미션 카드뷰 -->
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체크포인트 10곳 방문하기"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/brown"
                android:progress="80"
                android:progressTint="@color/green" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="8/10"
                android:textColor="@color/text_dark"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 산책 종료 버튼 -->
        <Button
            android:id="@+id/btn_start_stop_walk"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/green"
            android:text="산책 시작하기"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 산책 종료 카드 -->
    <LinearLayout
        android:id="@+id/end_walk_card"
        android:layout_width="390dp"
        android:layout_height="396dp"
        android:layout_gravity="bottom"
        android:background="@drawable/walk_bottombackground"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="182dp"
            android:layout_height="104dp"
            android:src="@drawable/img_question" />

        <!-- 질문 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="산책이 끝나셨나요?"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 이어하기 버튼 -->
        <Button
            android:id="@+id/continue_walk_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/green"
            android:text="이어하기"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!-- 끝내기 버튼 -->
        <Button
            android:id="@+id/finish_walk_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/brown"
            android:text="끝내기"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>