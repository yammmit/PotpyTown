<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5EB"
    android:fitsSystemWindows="true">

    <!-- 상단 고정된 Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ivory"
        android:elevation="8dp"
        app:title="회원가입"
        app:titleTextColor="@color/text_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/icon_arrow_back"/>

    <!-- ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="10dp"
        android:fitsSystemWindows="true"
        android:fillViewport="true"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 로고 이미지 -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/logo_img"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:layout_marginTop="32dp" />

            <!-- 이름 입력 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="16sp"
                android:layout_marginTop="50dp" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:hint="이름"
                android:background="@drawable/input_box"
                android:padding="12dp"
                android:textColor="#4A4A4A"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <!-- 아이디 입력 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="16sp"
                android:layout_marginTop="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/editTextID"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="아이디"
                    android:background="@drawable/rounded_edittext_background"
                    android:padding="12dp"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buttonCheckID"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:text="중복확인"
                    android:backgroundTint="#96B16B"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/idError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- 이메일 입력 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textSize="16sp"
                android:layout_marginTop="25dp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:hint="이메일"
                android:background="@drawable/input_box"
                android:padding="12dp"
                android:textColor="#4A4A4A"
                android:textSize="16sp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/emailError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#DF6983"
                android:textSize="12sp"
                android:visibility="gone" />

        <!-- 닉네임 입력 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <EditText
            android:id="@+id/editTextNickname"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="닉네임"
            android:background="@drawable/input_box"
            android:padding="12dp"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <!-- 휴대폰 번호 입력 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대폰 번호"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <!-- 휴대폰 번호 입력 -->
            <EditText
                android:id="@+id/editTextPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@drawable/input_box"
                android:hint="휴대폰 번호"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="#4A4A4A" />

            <!-- 인증번호 발송 버튼 -->
            <Button
                android:id="@+id/buttonSendVerification"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="16dp"
                android:text="인증번호 발송"
                android:backgroundTint="#96B16B"
                android:textColor="#FFFFFF" />

            <!-- 인증코드 입력칸과 오류 메시지 (초기에는 숨김 처리) -->
            <LinearLayout
                android:id="@+id/verificationCodeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <!-- 인증코드 입력 -->
                <EditText
                    android:id="@+id/editTextVerificationCode"
                    android:layout_width="0dp"
                    android:layout_height="53dp"
                    android:layout_weight="1"
                    android:hint="인증코드 입력"
                    android:background="@drawable/input_box"
                    android:padding="12dp"
                    android:inputType="number"
                    android:textColor="#4A4A4A"
                    android:textSize="16sp" />

                <!-- 재요청 버튼 -->
                <Button
                    android:id="@+id/buttonResend"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:text="재요청"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="#96B16B"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- 인증 실패 메시지 -->
            <TextView
                android:id="@+id/verificationError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="인증번호를 정확히 입력해주세요."
                android:textColor="#DF6983"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 비밀번호 입력 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="비밀번호"
            android:background="@drawable/input_box"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textSize="16sp"
            android:layout_marginTop="25dp" />

        <EditText
            android:id="@+id/editTextPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:hint="비밀번호 확인"
            android:background="@drawable/input_box"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="#4A4A4A"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/passwordConfirmError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#DF6983"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- 회원가입 버튼 -->
        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="#96B16B"
            android:enabled="false"
            android:text="회원가입"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>