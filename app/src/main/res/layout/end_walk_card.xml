<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="396dp"
    android:src="@drawable/walk_bottombackground"
    android:gravity="end|bottom">

    <ImageView
        android:id="@+id/end_walk_image"
        android:layout_width="182dp"
        android:layout_height="104dp"
        android:src="@drawable/img_question" />

    <TextView
        android:id="@+id/end_walk_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/end_walk_image"
        android:layout_marginTop="16dp"
        android:text="산책이 끝나셨나요?"
        android:textSize="16sp"
        android:textColor="@color/text_dark"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/end_walk_text"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/continue_walk_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이어하기"
            android:backgroundTint="@color/white"
            android:textColor="@color/green" />

        <Button
            android:id="@+id/finish_walk_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="끝내기"
            android:backgroundTint="@color/green"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
