<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e0e7f3"
    tools:context=".HomeActivity">

    <!-- 배경 이미지 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="배경 이미지"
        android:layout_marginTop="150dp"
        android:scaleType="center"
        android:src="@drawable/background_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 현재 위치와 날씨 텍스트 -->
        <!-- Lottie 애니메이션 뷰 -->

        <!-- 위치 텍스트 -->
         <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imgWeather"
            android:layout_width="145dp"
            android:layout_height="128dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="14dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/clear_day" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="125dp"
            android:layout_marginEnd="131dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!-- 기온 텍스트 -->
        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="127dp"
            android:layout_marginEnd="89dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgWeather"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="355dp"
            android:layout_marginEnd="0dp"
            android:padding="8dp"
            android:scrollbars="horizontal" />

        <!-- 즐겨찾기 버튼 -->
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_favorite_inactive"
            android:contentDescription="즐겨찾기 버튼" />

        <!-- 추천 산책코스 -->
        <HorizontalScrollView
            android:id="@+id/recommended_walks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="8dp"
            android:scrollbars="none">
            <!-- 내용 생략 -->
        </HorizontalScrollView>

        <!-- 하단 탭 바 -->
        <LinearLayout
            android:id="@+id/tab_bar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">
            <!-- 아이콘들 -->
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
