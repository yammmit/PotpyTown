<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <!-- 상단: 현재 위치와 날씨 표시 -->
    <TextView
        android:id="@+id/location_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="잠원동 12°"
        android:textSize="20sp"
        android:textColor="@color/textColor" />

    <!-- 캐릭터 이미지 -->
    <ImageView
        android:id="@+id/character_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/location_weather"
        android:scaleType="centerInside"
        android:src="@drawable/character_group_image"
        android:layout_marginTop="8dp" />

    <!-- 중앙: 나를 위한 산책코스 카드 -->
    <HorizontalScrollView
        android:id="@+id/recommended_walks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/character_image"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 예시 카드 1 -->
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/sample_image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="강아지 친구들과 함께!"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.5 km 이내"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/subTextColor" />
            </LinearLayout>

            <!-- 예시 카드 추가 가능 -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 지금 어울리는 장소 카드 -->
    <HorizontalScrollView
        android:id="@+id/nearby_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommended_walks"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 예시 카드 1 -->
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/sample_image2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="하이밍그라미"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="반려견놀이터"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/subTextColor" />
            </LinearLayout>

            <!-- 예시 카드 추가 가능 -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 하단 탭 바 -->
    <LinearLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/tabBarColor"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- 각 아이콘 버튼 -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="메인"
            android:src="@drawable/icon_home" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="산책 홈"
            android:src="@drawable/icon_walk" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="기록"
            android:src="@drawable/icon_health" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="마이페이지"
            android:src="@drawable/icon_settings" />
    </LinearLayout>

</RelativeLayout>