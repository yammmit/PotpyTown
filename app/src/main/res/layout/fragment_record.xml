        app:itemIconTint="@color/nav_item_colors"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu"
        tools:ignore="MissingConstraints" />
    -->

</androidx.constraintlayout.widget.ConstraintLayout>